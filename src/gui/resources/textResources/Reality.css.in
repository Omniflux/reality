 * Style sheet for the realitypanel.ui file.
 * This defines the look and feel of Reality 
 */
#define WIDGET_BG #525252
#define LIGHT_BG  #606060
#define EDIT_BG   #9098a0
#define SPLITTER_BG #606060
#define TITLE_BG  #64707c

QWidget {
  #ifdef OSX
  font-family: "Lucida Grande";
  font-size: 12pt;
  #endif

  #ifdef WINDOWS
  font-family: "Segoe UI";
  font-size: 10pt;
  #endif
  background-color: WIDGET_BG;
}

QWidget:disabled {
  color: #858585;
}

QLabel {
  color: #f0f0f0;
}

QSplitter::handle:vertical {
  background-color: SPLITTER_BG;
  height: 0.5em;
}

QSplitter::handle:horizontal {
  background-color: SPLITTER_BG;
  width: 0.6em;
}

QLabel#meTitle {
  font-size: 16px;
  font-weight: bold;
}

QLabel#lblTextureName {
  font-size: 12px;
  font-style: italic;
}

QLabel#trail {
  background-color: EDIT_BG;
}

QTreeView, QListWidget, QListView, QTableView {
  show-decoration-selected: 1;
  background-color: EDIT_BG;
  color: black;
  selection-background-color: #485058;
  selection-color: #ffa828;
}

QTreeView::item::selected, QListWidget::item::selected, 
QListView::item::selected, QTableView::item::selected {
  show-decoration-selected: 1;
  background: #485058;
  color: #ffa828;
}

QTreeView:disabled, QListWidget:disabled, QListView:disabled, QTableView:disabled {
  selection-background-color: EDIT_BG;
}

QTreeView::indicator {
  width:  12px;
  height: 12px;
  border: none;
  background-color: #858585;
}

QTreeView::indicator:checked {
  background-color: #ffa828;
  border: 1px solid black;
  image: url(:/images/checkmark.png);
}

/* Add some distance from the "Open/Collapse" buttons */
QFrame#frExpCollButtons {
  margin-top: 0.6em;
}

QLineEdit, QTextEdit {
  border: 1px solid #404040;
  border-radius: 4px;
  padding: 0px;
  background-color: EDIT_BG;
  color: #0a0a0a;
}

QLineEdit:disabled,QTextEdit:disabled {
  color: #d0d0d0;
  background-color: WIDGET_BG;
}

/**
 * Scrollbars
 */
QScrollBar:vertical
{
  border: 1px solid black;
  background: #404040;
  width: 15px; 
  margin: 22px 0 22px 0;
}

QScrollBar::handle:vertical
{
  min-width: 20px;
  background-color: LIGHT_BG;
  border: none;
}

QScrollBar::add-line:vertical {
  height: 20px;
  border: 1px solid black;
  subcontrol-position: bottom;
  subcontrol-origin: margin;  
}

QScrollBar::sub-line:vertical 
{
  height: 20px;
  border: 1px solid black;
  subcontrol-position: top;
  subcontrol-origin: margin;  
}

QScrollBar::down-arrow:vertical, 
QScrollBar::up-arrow:vertical {
  border: 2px solid #121212;
  width: 3px;
  height: 3px;
  background: #121212;
}

QScrollBar::add-page:vertical, 
QScrollBar::sub-page:vertical {
  background: #404040;
}

QScrollBar:horizontal
{
  border: 1px solid black;
  background: #404040;
  height: 15px;
  margin: 0px 22px 0px 22px;
}

QScrollBar::handle:horizontal {
  min-width: 20px;
  background: LIGHT_BG;
}

QScrollBar::add-line:horizontal {
  width: 20px;
  border: 1px solid black;
  subcontrol-position: right;
  subcontrol-origin: margin;  
}
QScrollBar::sub-line:horizontal 
{
  width: 20px;
  border: 1px solid black;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

QScrollBar::left-arrow:horizontal, 
QScrollBar::right-arrow:horizontal {
  border: 2px solid #121212;
  width: 3px;
  height: 3px;
  background: #121212;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
  background: #404040;
}

/* Texture preview info fields */

QWidget#wdg_textureAvatar {
  padding: 2px;
  color: #f0f0f0;
  background-color: LIGHT_BG;
  min-height: 4.5em;
  max-height: 4.5em
}

QFrame[class="TexPreviewMainFrame"] {
#ifdef OSX
  padding-bottom: 0.3ex;
#endif
#ifdef WINDOWS
  padding-bottom: 1ex;
#endif
  min-height: 4.5em;
  max-height: 4.5em
}

QFrame#mainFrame {
  background-color: LIGHT_BG;
}

QFrame > QLabel#lblTextureName {
  background-color: LIGHT_BG;
  padding-left: 1.2ex;
}

/* Label used at the top of the Texture Avatar */
QFrame#Legend{
  background-color: #64707c;
  padding-left: 6px;
  padding-right: 6px;
  min-height: 1.3em;
}

QFrame > QStackedWidget#textures {
  background-color: LIGHT_BG;
  padding-left: 6px;
}

QGroupBox {
  border: 1px solid #686868;
  padding: 2ex;
  margin: 1ex;
  border-radius: 5px;
  margin-top: 3ex; /* leave space at the top for the title */
  margin-bottom: 10px;
  color: white;  
}

QGroupBox::title {
  subcontrol-origin: border;
  subcontrol-position: top center; /* position at the top center */
  top: -7px;
  padding: 0 3px;
}

QGroupBox::indicator {
  width: 13px;
  height: 13px;
  border: 1px solid black;  
}
QGroupBox::indicator:unchecked {
   background-color: EDIT_BG;
}
QGroupBox::indicator:checked {
  background-color: #ffa828;
  image: url(:/images/checkmark.png);
}

QGroupBox[class="MatProperty"] {
  border: none;
  margin: 3ex 0px 1ex 0px; /* leave space at the top for the title */
  padding-bottom: 1ex;
  padding-top: 1.5em;
  background-color: #686868;
  color: white;  
}

QGroupBox::title[class="MatProperty"] {
  subcontrol-origin: border;
  subcontrol-position: top center; 
  top: -1.5ex;
  background-color: #64707c;
  padding: 3px 1500px 3px 1500px;
  margin-bottom: 1ex;
}

QGroupBox[class="MatProperty"] QLabel, 
QGroupBox[class="MatProperty"] QFrame, 
QGroupBox[class="MatProperty"] QRadioButton,
QGroupBox[class="MatProperty"] QCheckBox {
  background: #686868;
  color: white;
}

/* Setting the dimensions for the Modifiers */
QGroupBox#gbBumpMap {
  min-height: 5em;
  max-height: 5em;
}
QGroupBox#gbDisplacement {
  min-height: 5em;
  max-height: 5em;
}
QGroupBox#gbGeometry {
  min-height: 4em;
  max-height: 4em;
}
QGroupBox#hasLight {
  min-height: 5em;
  max-height:5em;
}
/* End of Modifiers */

/*
 * Hack to make the SSS box align at the top under Windows
 */
QGroupBox#SSS {
  #ifdef WINDOWS
  margin-top: 0.18em;
  #endif
  padding: 0.8em 0.1em 4em 0.1em;
}

/*
 * The material preview box
 */
QGroupBox#MaterialPreview {
  background-color: LIGHT_BG;
  border: none;
  margin: 0.5em 0em 0.5em 0px;
  max-width: 11em;
  min-width: 11em;  
}

QGroupBox#MaterialPreview::title {
  background-color: TITLE_BG;
  subcontrol-origin: border;
  subcontrol-position: top center;
  top: -7px;
  padding: 3px 1500px 3px 1500px;
  color: white;
}
#frMatPreview, #gpPreviewType, #lblRenderingPreview
{
  background-color: transparent;  
}
/* End of Mat preview */

QGroupBox[class="ScrollGroup"]{
  border: none;
  padding: 0.9em 0.2em 0px 0.2em;
  margin: 1ex;
  margin-top: 3ex; /* leave space at the top for the title */
  margin-bottom: 10px;
}

QGroupBox::title[class="ScrollGroup"] {
  subcontrol-origin: border;
  subcontrol-position: top center; /* position at the top center */
  top: -7px;
  padding: 3px 1500px 3px 1500px;
  background-color: #64707c;
  color: white;
}

QTabWidget {
  qproperty-iconSize: 16px 16px;
}

QTabWidget::pane { 
  border: 1px solid #686868;
}

QTabWidget::pane#mainTabs { 
  border: none;
}

QTabBar::tab  {
  background-color: LIGHT_BG;
  border: 1px solid black;
  color: #f0f0f0;
  margin-right: 1px;
  max-height: 1.2em;
  min-width: 8ex;
  padding: 3px;
}

QTabBar::tab:selected {
  background-color: #ffa828;
  color: black;
}
QTabBar::tab:disabled {
  font-style: italic;
  color: #AAAAAA;
}

QTabBar::tab:first {
  border-top-left-radius: 4px;
}

QTabBar::tab:last {
  border-top-right-radius: 4px;
}


QCheckBox {
  spacing: 5px;
  margin-top: 2px;
  margin-bottom: 2px;
  margin-right: 3px;
  color: #f0f0f0;  
}

QCheckBox::indicator {
  width: 13px;
  height: 13px;
  border: 1px solid black;  
}

QCheckBox::indicator:unchecked {
  background-color: EDIT_BG;
}

QCheckBox::indicator:unchecked:disabled {
  background-color: #a0a0a0;
}

QCheckBox::indicator:checked {
  background-color: #ffa828;
  image: url(:/images/checkmark.png);
}

QCheckBox::indicator:checked:disabled {
  background-color: #a0a0a0;
  image: url(:/images/checkmark.png);
}

QHeaderView::section {
  background-color: #64707c;
  color: white;
  padding-left: 4px;
  padding-top: 2px;
  padding-bottom: 2px;
  border-top: none;
  border-bottom: none;
  border-left: none;
  border-right: 1px solid #7c7c7c;
}

QSpinBox, QDoubleSpinBox {
  padding-right: 15px;
  border-width: 3;
  border: 1px solid black;
  background-color: EDIT_BG;
  color: #0a0a0a;
  border-radius: 4px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
  subcontrol-origin: border;
  subcontrol-position: top right; 
  border-image: url(:/images/spinBoxUp.png) 1;
  width: 10px; 
  margin-top: 2px;
  margin-right: 2px;
  margin-bottom: 1px;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
  subcontrol-origin: border;
  subcontrol-position: bottom right; 
  border-image: url(:/images/spinBoxDown.png) 1;
  width: 10px;
  margin-top: 1px;
  margin-bottom: 2px;
  margin-right: 2px;
}

QPushButton {
  border: 1px solid black;
  color: #f0f0f0;
  background-color: LIGHT_BG;
  border-radius: 4px;
  min-width: 20px;
  padding: 4px;
  margin: 0 10 5px 5px;
}

QPushButton:disabled {
  background-color: #505050;
  color: #5A5A5A;
}

QPushButton:pressed {
  background-color: #6c6c6c;
}

QPushButton:checked {
  background-color: #7c7c7c;
}

QPushButton:flat {
  border: none; 
  background-color: transparent;
}

QPushButton:default {
  background-color: #EFAF54;
  color: black;
}

QPushButton::menu-indicator {
   image: none;
}

QPushButton#btnProductUsage {
  #ifdef OSX  
  font-size: 10pt;
  #endif

  #ifdef WINDOWS
  font-size: 8pt;
  #endif
  min-height: 0.8em;
  max-height: 0.8em;
}

QPushButton[class="BreadcrumbBtn"] {
  min-width: 0.8em;
  max-width: 0.8em;
  min-height: 0.8em;
  max-height: 0.8em;
  margin-top: 0.3em;
  margin-left: 0.5em;
}

QToolButton:!checked {
  border: none;
  background-color: #505050;
}

QToolButton:checked {
  border: 1px solid black;
  background-color: #6c6c6c;
}

/* The sync button for the h/v glossiness*/
#btnAnisotropic {
  background-color: transparent;
  border: none;
  margin-top: 0.4em;
}

/* The Apply preset button in the Cloth editor */
#frmClothPreset #btnApplyPreset {
  min-width: 3em;
}

#btnRenderFrame {
  qproperty-iconSize: 24px 24px;
}

#btnRenderAnimation {
  qproperty-iconSize: 24px 24px;
}

/* The Gear Button */
QPushButton[class="GearButton"] {
  margin-top: 0.8em;
  margin-left: -0.3em;
  background-color: transparent;
}

QComboBox {
  border: 1px solid black;
  background-color: LIGHT_BG;
  color: #f0f0f0;  
  border-radius: 3px;
  min-width: 6em;
  selection-background-color: #ffa828;
  selection-color: black;
}

QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;

  border-left-width: 1px;
  border-left-color: darkgray;
  border-left-style: solid; /* just a single line */
}

QComboBox::down-arrow {
  image: url(:/images/down_arrow.png);
}

/* shift the arrow when popup is open */
QComboBox::down-arrow:on { 
  top: 1px;
  left: 1px;
}

QComboBox QAbstractItemView {
  margin-top: 0px;
  padding-top: 0px;
  padding-bottom: 0px;
  background-color: #686868;
}

QMenu {
  color: #f0f0f0;
  background-color: LIGHT_BG;
}

QMenu::item {
  background-color: transparent;
}

QMenu::item:selected { 
  background-color: #ffa828;
  selection-color: black;  
}

QMenu::item:disabled { 
  color: #a1a1a1;
}

/* For Windows only */
QMenuBar::item {
  background-color: transparent;
}

QMenuBar::item:selected {
  background-color: #ffa828;
  selection-color: black;  
}

#tvMaterials::indicator {
  border: none;
  background-color: transparent;
  max-width: 1.3em;
  max-height: 1.3em;
  min-width: 1.3em;
  min-height: 1.3em;
  margin-left: 1.6em;
}

#tvMaterials::indicator:checked {
  image: url(:/images/eye-closed.png);
}

#tvMaterials::indicator:unchecked {
  image: url(:/images/eye-open.png);
}
